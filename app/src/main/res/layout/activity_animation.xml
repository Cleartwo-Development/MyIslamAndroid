<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ativities.AnimationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/animationImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/zero_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/wudu_guide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/wudu_guide_bg" />
                <LinearLayout
                    android:id="@+id/text_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/houschka_rounded_bold"
                        android:gravity="center"
                        android:text="Steps"
                        android:textStyle="bold"
                        android:textColor="@color/colorAppRed"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/text_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/houschka_rounded_bold"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorBlack"
                        android:text="Steps"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/text_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/houschka_rounded_bold"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginTop="12dp"
                        android:textColor="@color/colorAppRed"
                        android:textSize="22sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/steps_view"
            android:layout_width="145dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-145dp"
            android:background="@drawable/step_no_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/houschka_rounded_bold"
                android:gravity="center"
                android:text="Steps"
                android:textColor="@color/colorAppRed"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/red_rounded_bg" />

                <TextView
                    android:id="@+id/step_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/houschka_rounded_bold"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/performing_wudu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landscap_bg">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/sign_up_logo" />

        <TextView
            android:id="@+id/wudu_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/logo_img"
            android:fontFamily="@font/houschka_rounded_bold"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Performing wudu"
            android:textColor="@color/colorPurple"
            android:textSize="45dp"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/reStart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/refresh_24"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/slideImg"
        android:layout_width="2500dp"
        android:layout_height="0dp"
        android:layout_margin="-1000dp"
        android:layout_centerInParent="true"
        android:src="@drawable/slide_blue_img"/>

</RelativeLayout>