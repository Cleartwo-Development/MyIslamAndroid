<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ativities.AngelsActivity">

    <RelativeLayout
        android:id="@+id/tab_bar_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/purpal_header_bg"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/home_title_bg"
            android:paddingTop="24dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_arrow_back_button"
                android:tint="@color/colorWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_bar_view">

        <ImageView
            android:id="@+id/img_thinking"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/basic_beliefs_bg" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_thinking">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Basic Beliefs"
                    android:textColor="@color/colorPurple"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner_grey"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_corner_blue"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Angels"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Allah created everything from the sky to the sea and
everything in between. The birds that fly above us and
the cats that roam the streets – Allah made them.\n\n
He also made creatures called Angels. We cannot see
the Angels, but Allah talks about them in the Quran.
They are made from light and they are Allah’s special
servants because they do everything they are told.\n\n
Angels have many different jobs, but they always obey
Allah’s commands. There are two angels named Raqib
and Atid that record each human’s deeds. They write
down all the good and bad actions that each person
has carried out during their life. Together they are
known as ‘Kiraman Katibin’ (Honourable Recorders).
"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Other Major Angels:"
                        android:textColor="@color/colorBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_thinking"
                            android:layout_margin="5dp"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:id="@+id/question_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorTabBar"
                                android:drawableRight="@drawable/drop_down_btn"
                                android:padding="5dp"
                                android:text="Jibra’il (Gabriel)"
                                android:textColor="@color/colorPurple"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/answer_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/question_title"
                                android:text="The angel of revelation. Jibra’il delivered the Quran, verse by verse, to
Prophet Muhammad (pbuh)."
                                android:visibility="gone"
                                android:textColor="@color/colorBlue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_thinking"
                            android:layout_margin="5dp"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:id="@+id/question_title1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorTabBar"
                                android:drawableRight="@drawable/drop_down_btn"
                                android:padding="5dp"
                                android:text="Mika’il (Michael)"
                                android:textColor="@color/colorPurple"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/answer_title1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/question_title1"
                                android:text="The angel of mercy. Mika’il
is responsible for bringing rain and thunder to Earth."
                                android:visibility="gone"
                                android:textColor="@color/colorBlue" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_thinking"
                            android:layout_margin="5dp"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:id="@+id/question_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorTabBar"
                                android:drawableRight="@drawable/drop_down_btn"
                                android:padding="5dp"
                                android:text="Izra’il (Azrael)"
                                android:textColor="@color/colorPurple"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/answer_title2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/question_title2"
                                android:text="The angel of death.
Izra’il takes the souls from the bodies when people die so
they can enter the afterlife."
                                android:visibility="gone"
                                android:textColor="@color/colorBlue" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_thinking"
                            android:layout_margin="5dp"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:id="@+id/question_title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorTabBar"
                                android:drawableRight="@drawable/drop_down_btn"
                                android:padding="5dp"
                                android:text="Israfil"
                                android:textColor="@color/colorPurple"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/answer_title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/question_title3"
                                android:text="Israfil has been given the role of blowing the trumpet to
declare the Day of Judgement."
                                android:visibility="gone"
                                android:textColor="@color/colorBlue" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:src="@drawable/back_button" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:text="Allah"
                            android:textColor="@color/colorBlue"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/next_btn"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:text="Messengers"
                            android:textColor="@color/colorAppRed"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:src="@drawable/next_button" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>