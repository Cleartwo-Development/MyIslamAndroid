<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    tools:context=".ativities.Spot3Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/landscap_bg"
        android:tint="@color/transparentBlue" />

    <LinearLayout
        android:id="@+id/images_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/three_find" />

        <View
            android:layout_width="40dp"
            android:layout_height="280dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/three_missing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="300dp"
            android:layout_height="280dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="280dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/ans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/ans_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/ans_2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/ans_3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="55dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent" />


            <ImageView
                android:id="@+id/ans_4"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="110dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/ans_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rate_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rate_grey" />

        <ImageView
            android:id="@+id/rate_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rate_grey" />

        <ImageView
            android:id="@+id/rate_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rate_grey" />

        <ImageView
            android:id="@+id/rate_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rate_grey" />

        <ImageView
            android:id="@+id/rate_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rate_grey" />
    </LinearLayout>

    <ImageView
        android:id="@+id/back_to_game"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitEnd"
        android:src="@drawable/back_btn" />

</RelativeLayout>