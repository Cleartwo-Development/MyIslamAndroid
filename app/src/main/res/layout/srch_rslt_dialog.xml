<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ativities.AngelsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_bg"
        android:layout_margin="18dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="300dp"
        android:src="@drawable/app_special_icons" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/back_to_game"
            android:layout_alignParentRight="true"
            android:src="@drawable/word_srch_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingTop="30dp"
            android:text="Excellent!"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/next_puzzle"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/unselected_btn"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingRight="10dp"
                android:text="Next Puzzle"
                android:textColor="@color/colorPurple"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_btn"
                android:tint="@color/colorWhite"
                android:padding="10dp"
                android:src="@drawable/right_errow" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/result_back"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:scaleType="fitEnd"
        android:src="@drawable/back_btn" />



</RelativeLayout>