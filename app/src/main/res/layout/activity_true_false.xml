<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ativities.TrueFalseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/start_signup_bg"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:src="@drawable/half_mask"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/back_to_game"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitEnd"
        android:src="@drawable/back_game" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/back_to_game"
        android:layout_alignParentRight="true"
        android:src="@drawable/true_f_logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/logo"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/question_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Question 8"
            android:paddingLeft="22dp"
            android:gravity="center_vertical"
            android:textSize="26sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/text_bg"/>
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prophet Muhammad (PBUH) died in Makkah"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPurple"/>

        <LinearLayout
            android:id="@+id/true_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/unselected_btn"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/true_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="True"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorPurple"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:src="@drawable/true_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/false_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/unselected_btn"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/q_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="False"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorPurple"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_weight="3"
                android:src="@drawable/false_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Next"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorAppRed"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/next_button" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>