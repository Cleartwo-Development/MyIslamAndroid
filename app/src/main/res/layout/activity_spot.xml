<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    tools:context=".ativities.SpotActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/landscap_bg"
        android:tint="@color/transparentBlue" />

    <ImageView
        android:id="@+id/spot_right_btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:scaleType="fitEnd"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_red_arrow"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/spot_left_btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:scaleType="fitStart"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/left_red_arrow"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/images_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/one_find"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:src="@drawable/one_missing"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/back_to_game"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitEnd"
        android:src="@drawable/back_game" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="fitStart"
        android:layout_margin="60dp"
        android:src="@drawable/spot_logo"
        android:layout_weight="1"/>

</RelativeLayout>